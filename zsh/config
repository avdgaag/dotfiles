autoload -U colors
colors
setopt prompt_subst
PROMPT='%n@%m:%3~ %{$fg_bold[darkgrey]%}$(vcprompt)%# %{$reset_color%}'

# Enable coloured output from ls, etc
export CLICOLOR=1

# Load completions for Ruby, Git, etc.
autoload -U compinit
compinit

# Automatically enter dirs without cd
setopt auto_cd

if [[ -s /Users/arjan/.rvm/scripts/rvm ]] ; then source /Users/arjan/.rvm/scripts/rvm ; fi
