# name: def initialize
# key: defi
# contributor: Arjan van der Gaag
# --
def initialize(${2:argument})
${2:$(if (string= "" yas-text)
        ""
        (mapconcat
          (lambda (s)
            (setq name
              (if (string-match "\\\\([a-zA-Z0-9_]+\\\\)" s)
                (match-string 1 s)))
            (format "  @%s = %s" name name))
          (split-string yas-text ",")
          "\n")
)}
  $0
end